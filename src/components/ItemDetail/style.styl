.detail
	padding 95px 23px 71px 23px
	background-color rgb( 255, 111, 0)
.detail .detail-title
	text-align center
	font-size 20px
	color #fff
.detail .item-info
	line-height 22px
	color #fff
	margin-top 18px
.detail .info-card
	padding 11px 4px 7px 11px
	border-left 6px solid rgb( 0, 200, 83)
	background-color #fff
	border-radius 6px
	box-shadow 0 2px 4px 0 rgba( 0, 0, 0, 0.07)
	font-size 13px
	line-height 18px
	color rgba( 0, 0, 0, 0.54)
	position absolute
	top 260px
	left 5%
	right 5%
.detail-status
	background-color rgb(250,250,250)
.project-img
	width 80%
	display block
	margin 0 auto
	padding-top 75px
.card-bottom
	background-color #fff
	padding 16px 15px
	font-size 14px
	border-bottom-left-radius 10px
	border-bottom-right-radius 10px
	display inline-block
.card
	width 90%
	display block
	margin 0 auto
.card-btn
	color #fff
	background-color rgb( 31, 169, 107)
	border none
	border-radius 4px
	padding 3.5px 8px
