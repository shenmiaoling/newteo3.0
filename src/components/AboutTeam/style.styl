.team
  padding-top 80px
  padding-bottom 45px
  background-image: linear-gradient(to bottom, rgb(255, 143, 0), rgb(255, 248, 225));
.team-logo
  width 97px
  height 97px
  display block
  margin 0 auto
.team-name
  text-align center
  color rgb( 255, 111, 0)
.team-intro
  background-color #fff
  width 80%
  display block
  margin 0 auto
  padding 24px 14px 10px 14px
  border-radius 10px
  box-shadow: 5px 2px 46px rgba(255, 111, 0, 0.68)
.team-context
  font-size 14px
  line-height 20px
  margin-bottom 11px
div.arrow-up {
  width:0px; 
  height:0px; 
  border-left:20px solid transparent;  /* left arrow slant */
  border-right:20px solid transparent; /* right arrow slant */
  border-bottom:20px solid #fff; /* bottom, add background color here */
  font-size:0px;
  line-height:0px;
  display block
  margin 0 auto
}