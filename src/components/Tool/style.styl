.tool-top
	padding-top 138px
	padding-bottom 44px
	background-image: linear-gradient(to bottom ,
rgb( 13, 71, 161),rgb( 33, 150, 243) );
.tool .tool-title
	font-size 20px
	color #fff
	text-align center
.tool .tool-btn
	padding 8px
	width 50%
	border-radius 2px
	background-color transparent
	border 1px solid #fff
	color #fff
	display block
	margin 0 auto
	margin-top 71px
.tool .tool-img
	width 110px
	height 181px
	padding-top 45px
	padding-bottom 33px
	display block
	margin 0 auto
.tool .tool-intro
	padding-left 20px
	padding-right 20px
.tool-intro .intro
	font-size 20px
	color #000
.tool-intro .main-intro
	font-size 14px
	line-height 20px
	color rgba(0,0,0,.54)
	margin-top 14px
.tool .code-title
	padding 5px 10px
	border-left 5px solid rgb( 21, 101, 192)
.tool .wechat-code
	width 125px
	height 125px
	display block
	margin 0 auto
	margin-top 44px
	margin-bottom 69px
.tool .tool-bottom
	background-color #f5f5f5
	padding-top 29px
	padding-bottom 49px
@media(max-width: 320px)
	.tool .tool-title
		font-size 18px
	.tool .tool-btn
		padding 5px
