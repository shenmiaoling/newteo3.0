body
  margin 0
  padding 0
  color rgba( 0, 0, 0, 0.87)
.topbar
  background-color transparent
  padding: 14px 0;
  position absolute
  top 0px
  left 0px
  right 0px
.logo
  width 28px;
  height 28px
  vertical-align sub
  margin-left 20px
.title
  margin-left 14px
a
  text-decoration: none
  color white
.menu-icon
  display inline-block
  float right
  margin-right 20px
  margin-top 4px
  color #fff
.slide-bar
  width 100%
  height 100%
  background-color pink
.wrapper
  position:fixed;
  width:100%;
  height:100%;
  top:0px;
  left:0px;
  background-color rgb(79,79,79)
#slide
  display: inline-block;
  float: right;
  margin-top: 20px;
  color: #fff;

.wrapper:hover #slide
  transition: 1s;
  left: 0;

#slide-icon
  margin-right 20px
  margin-top 4px
  color #fff
.menu-title
  margin-top 89px
  text-align center
  font-size 20px
  line-height 38px
.menu-title a
  color rgba( 255, 255, 255, 0.50)
