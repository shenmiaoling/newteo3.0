.input-info
	margin-top 192px
.basic-input
	display block
	margin 0 auto
	width 73%
	height 40px
	border-radius 4px
	font-size 14px
	padding-left 14px
	margin-top 20px
.discription
	width 73%
	height 166px
	padding-left 14px
	padding-top 14px
	border-radius 4px
	display block
	margin 0 auto
	margin-top 20px
	font-size 14px
.post-btn
	padding 5px
	width 19%
	border none
	background-image linear-gradient(to right, rgb(219, 84, 52),rgb( 255, 111, 0))
	color #fff
	margin-left 11.5%
	margin-top 30px
	border-radius 2px
.star
	color #ff6f00
	width 70%
	display block
	margin 0 auto
	margin-top 10px
	background:rgba(0,0,0,0.49);
.show-tips
	position:fixed;
	margin:0;
	top:0;
	left:0;
	width: 100%;
	height: 100%;
	background:rgba(0,0,0,0.49);
.tips-container
	background-color white
	width: 74%;
	display: block;
	margin: 0 auto;
	border-radius 10px
	margin-top: 55%;
.fetch-tips-txt
	text-align center
	font-size 20px
	padding-top 27px
	padding-bottom 8px
	color rgb(0, 0, 0)
.fetch-tips-txt2
	text-align center
	font-size 20px
	color rgba(0,0,0,.54)
	padding-bottom 13px
	border-bottom 1px solid rgb( 216, 216, 216)
.ok-btn
	text-align center
	font-size 20px
	color rgb( 245, 158, 45)
	padding-top 12px
	padding-bottom 14px
@media(max-width: 768px)
	.post-btn
		padding 10px
		margin-left: 12.5%
	.tips
		font-size 20px !important
		line-height 26px !important
	.tips-text
		font-size 16px !important
		line-height 22px !important
@media(max-width: 480px)
	.post-btn
		padding 5px
		margin-left: 11.5%
	.tips
		font-size 13px !important
		line-height 19px !important
	.tips-text
		font-size 13px !important
		line-height 19px !important
