	.contact-btn
		width 25%
	.home-title
		margin-left 150px
	.home-txt
		font-size: 30px
		line-height 47px
	#typefield
		font-size 20px
		margin-left 150px
	.server-title
		font-size 25px
	.server-subtitle
		font-size 20px
	.server-context
		font-size 18px
	.tool-img
		width 158px
		height 260px
	.intro-title
		font-size 25px
		margin-bottom 30px
	.intro-subtitle
		font-size 20px
	.server-page
		padding: 45px 100px 50px 100px
	.intro
		margin-top 20px
		margin-left: 115px;
	.product-intro
		font-size 25px
	.product-subintro
		font-size 20px
	.product-title
		font-size 25px
	.contact-title
		font-size 25px
	.basic-input
		font-size 20px
	.discription
		font-size 20px
@media(max-width: 480px)
	.intro
		margin-top: 0px
		margin-left: 50px
	.contact-btn
		width 64%
	.home-title
		margin-left 37px
	.home-txt
		font-size 26px
		line-height 37px
	#typefield
		margin-left 75px
		line-height 32px
		font-size: 16px
	.server-page
		padding: 45px 30px 50px 30px
	.server-title
		font-size 20px
	.server-subtitle
		font-size 16px
	.server-context
		font-size 14px
	.tool-img
		width 79px
		height 130px
	.intro-title
		font-size 20px !important
		margin-bottom 10px !important
	.intro-subtitle
		font-size 14px
	.product-intro
		font-size 20px
